<h1>Listing subscriptions</h1>

<% if ! @subscriptions.empty? %>
  <table>
    <tr>
      <th>Project</th>
      <th>Page</th>
    </tr>

  <% @subscriptions.each do |subscription| %>
    <tr>
      <td><%=h subscription.page.project.name %></td>
      <td><%=h subscription.page.title %></td>
      <td><%= link_to 'Remove', subscription, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
  </table>
<% else %>
  <p>No subscriptions to display.</p>
<% end %>

